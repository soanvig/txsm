{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true, /** Disable typecheck because it has useless error messages when run through node register */
    "esm": true,
  }
}
